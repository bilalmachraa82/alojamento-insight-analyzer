# Database
DATABASE_URL="postgresql://user:password@localhost:5432/alojamento_insight"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Upstash Redis (Required for rate limiting and caching)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# API Security
API_SECRET="your-api-secret-min-32-chars-hex"
APP_ENCRYPTION_KEY="your-encryption-key-32-bytes-hex"

# Rate Limiting Configuration
# Admin users/IPs whitelisted from rate limits (comma-separated)
ADMIN_WHITELIST="admin-user-id-1,admin-user-id-2,192.168.1.100"

# IP Filtering
# Comma-separated list of whitelisted IPs
IP_WHITELIST="192.168.1.100,10.0.0.1"
# Comma-separated list of blacklisted IPs
IP_BLACKLIST=""

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Security Monitoring & Alerts
# Slack webhook for security alerts
SLACK_SECURITY_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
# Email for critical security alerts
SECURITY_ALERT_EMAIL="security@yourdomain.com"

# Email Configuration (for password reset, verification, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# Application Settings
NODE_ENV="development" # development | production | test
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Session Configuration
SESSION_TIMEOUT_MS="1800000" # 30 minutes in milliseconds
MAX_FAILED_ATTEMPTS="5"
LOCKOUT_DURATION_SECONDS="1800" # 30 minutes

# Feature Flags
ENABLE_2FA="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_RATE_LIMITING="true"
ENABLE_IP_FILTERING="true"

# Third-party Services (Optional)
# IP Reputation Services
ABUSEIPDB_API_KEY=""
IPQUALITYSCORE_API_KEY=""

# Analytics & Monitoring
SENTRY_DSN=""
GOOGLE_ANALYTICS_ID=""

# PDF Generation
PDF_SERVICE_URL="http://localhost:3001"
PDF_SERVICE_API_KEY=""

# Stripe (for payments, if applicable)
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# AWS S3 (for file storage, if applicable)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Development/Testing
# Set to "true" to disable security features in development
DEV_DISABLE_RATE_LIMIT="false"
DEV_DISABLE_2FA="false"
